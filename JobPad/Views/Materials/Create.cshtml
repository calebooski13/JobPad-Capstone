@model JobPad.Models.Material

@{
    ViewData["Title"] = "Create";
}

<h1>Add Job Material</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaterialType" class="control-label"></label>
                <input asp-for="MaterialType" class="form-control" />
                <span asp-validation-for="MaterialType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaintBrand" class="control-label"></label>
                <input asp-for="PaintBrand" class="form-control" />
                <span asp-validation-for="PaintBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaintColor" class="control-label"></label>
                <input asp-for="PaintColor" class="form-control" />
                <span asp-validation-for="PaintColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalMaterialCost" class="control-label"></label>
                <input asp-for="TotalMaterialCost" class="form-control" />
                <span asp-validation-for="TotalMaterialCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Jobs" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
